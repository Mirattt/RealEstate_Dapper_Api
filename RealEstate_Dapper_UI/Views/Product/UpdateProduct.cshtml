@model UpdateProductDtos

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4"> Personel Güncelleme Sayfası</h6>
                <form method="post">
                    <input type="hidden" asp-for="ProductID" />
                    <label>Ilan Basligi</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Sehir</label>
                    <input type="text" asp-for="City" class="form-control" />
                    <br />
                    <label>Ilce</label>
                    <input type="text" asp-for="District" class="form-control" />
                    <br />
                    <label>Adres</label>
                    <input type="text" asp-for="Adress" class="form-control" />
                    <br />
                    <label>Kategori</label>
                    <input type="text" asp-for="ProductCategory" class="form-control" />
                    <br />
                     <label>Fiyat</label>
                    <input type="text" asp-for="Price" class="form-control" />
                    <br />
                    <label>Fotograf URL</label>
                    <input type="text" asp-for="Coverimage" class="form-control" />
                    <br />
                    <label>Tür</label>
                    <input type="text" asp-for="Description" class="form-control" />
                    <br />
                    <button class="btn btn-primary"> Bilgileri Güncelle </button>
                </form>
            </div>
        </div>
    </div>
</div>

