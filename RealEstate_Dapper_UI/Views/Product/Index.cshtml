@model List<ResultProductDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Ilan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ilan Basligi</th>
                                <th scope="col">Şehir İsmi</th>
                                <th scope="col">Ilce</th>
                                <th scope="col">Adres</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Fotograf Url</th>
                                <th scope="col">Tür</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>

                                    <th scope="row">@count</th>
                                    <td>@item.Title</td>
                                    <td>@item.City</td>
                                    <td>@item.District</td>
                                    <td>@item.Adress</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.Price</td>
                                    <td>@item.Coverimage</td>
                                    <td>@item.Description</td>
                                    
                                    <td><a href="/Product/DeleteProduct/@item.ProductID" onclick="return confirm ('Silmek istediginize emin misiniz?')" class="btn btn-outline-danger">Sil</a> </td>
                                    <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success">Güncelle</a> </td>


                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Product/CreateProduct/" class="btn btn-outline-info">Yeni Ilan Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>

